        </div>
        <hr />
        <table id="table" class="table table-hover">
            <thead>
                <tr>
                    <th>Id do Armário</th>
                    <th>Número Armário</th>
                    <th>Nome do Cliente</th>
                    <th>Setor</th>
                    <th>Localização</th>
                    <th>Data Locação</th>
                    <th>Data Devolução</th>
                </tr>
            </thead>
        </table>
        <hr />
        <div id="chartdiv"></div>
    </div>
</div>

