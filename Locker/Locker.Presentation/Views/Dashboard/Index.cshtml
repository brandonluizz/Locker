@{
    ViewBag.Title = "Página Principal";
}
<style>
    .panelSuccess .panel-heading {
        color: #3c763d;
        background-color: #dff0d8;
        border-color: #d6e9c6;
    }
    .redBorder {
        border-color: #ebccd1;
    }
    .greenBorder {
        border-color: #d6e9c6;
    }
    .panelDanger .panel-heading {
        color: #a94442;
        background-color: #f2dede;
        border-color: #ebccd1;
    }
</style>
<h3>Gerenciamento de Armários</h3>
<hr />
<div data-bind="foreach: Lockers">
    <div class="col-md-4">
        <div class="panel" data-bind="css: { panelSuccess: IsUsing == false, 
             greenBorder: IsUsing == false, 
             panelDanger: IsUsing, 
             redBorder: IsUsing }">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Armário <span data-bind="text: LockerId"></span> -
                    <span class="label label-success" data-bind="visible: IsUsing == false">Disponível</span>
                    <span class="label label-danger" data-bind="visible: IsUsing">Em Uso</span>
                </h3>
            </div>
            <div class="panel-body">
                <button class="btn btn-info" data-bind="visible: IsUsing == false" disabled>Abrir armário</button>
                <button class="btn btn-info" data-bind="visible: IsUsing">Abrir armário</button>
            </div>
        </div>
    </div>    
</div>
<script src="~/Scripts/app/View/Dashboard/Dashboard.js" type="text/javascript"></script>