<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blocker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")   
    <link rel="stylesheet" href="~/node_modules/izitoast/dist/css/iziToast.css" />
</head>
<body>
    <div class="container">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Blocker</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (ViewBag.LoggedUser != null) 
                        {
                            <li><a href="/pagina-principal"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Pagina Principal</a></li>
                            <li><a href="/configuracao"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Configurações</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Relatórios</a></li>
                        }
                    </ul>
                    @if (ViewBag.LoggedUser != null)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li><p class="navbar-text"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Bem Vindo @ViewBag.LoggedUser.UserName!</p></li>
                            <li><a href="/sair"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Sair</a></li>
                        </ul>
                    }
                </div>
            </div>
        </div>
        @RenderBody()
        @*<hr />*@
        <footer></footer>
    </div>
    <script>
            $(function () {
           
                $(document).ajaxStart(function () {
                    $.blockUI({
                        baseZ: 9999,
                        message: '<div><h3 style="color: white">Carregando...</h3><img src="/Content/Images/lockerLoading.gif" style="width: 15%" alt="carregando" title="carregando"/></div>',
                        css: {
                            border: '0px solid rgb(170, 170, 170)',
                            backgroundColor: 'none'
                        }
                    });
                }).ajaxStop($.unblockUI);

            });
    </script>
    <script src="~/Scripts/knockout-3.4.2.js" type="text/javascript"></script>
    <script src="~/node_modules/izitoast/dist/js/iziToast.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.blockUI.js" type="text/javascript"></script>

</body>
</html>
