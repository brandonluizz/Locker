<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js" type="text/javascript"></script>

    <script>
        $(function () {

            $(document).ajaxStart(function () {
                $.blockUI({
                    baseZ: 9999,
                    message: '<div><h3 style="color: white">Carregando...</h3><img src="/Content/Images/lockerLoading.gif" style="width: 15%" alt="carregando" title="carregando"/></div>',
                    css: {
                         border: '0px solid rgb(170, 170, 170)',
                         backgroundColor: 'none' 
                    }
                });
            }).ajaxStop($.unblockUI);

        });
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Locker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (ViewBag.LoggedUser != null)
                    {
                        <li><a href="/configuracao">Configurações</a></li>
                        <li style="float:left"><a href="/sair">Sair</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.blockUI.js" type="text/javascript"></script>

</body>
</html>
