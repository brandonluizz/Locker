
@{
    ViewBag.Title = "Index";
}
<div id="sector-form">
    <h3>Configurações</h3>
    <hr />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Cadastro</h3>
        </div>
        <div class="panel-body">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="open-sector-modal">Adicionar novo setor</button>
                <button type="button" class="btn btn-default" id="open-block-modal">Adicionar novo bloco</button>
                <button type="button" class="btn btn-default" id="open-locker-modal">Adicionar Novo Armário</button>
            </div>
        </div>
    </div>

    <div class="panel panel-default ">
        <div class="panel-heading">
            <h3 class="panel-title">Armários Cadastrados</h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Bloco Id</th>
                        <th>Número da Posição Vertical</th>
                        <th>Número da Posição Horizontal</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: Lockers">
                    <tr>
                        <td data-bind="text: LockerId"></td>
                        <td data-bind="text: LockerBlockId"></td>
                        <td data-bind="text: VerticalPositionNumber"></td>
                        <td data-bind="text: HorizontalPositionNumber"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

   
    <div class="modal fade" id="sector-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Adicionar Novo Setor</h4>
                </div>
                <form data-bind="submit: SectorSubmit">
                    <div class="modal-body">


                        <div class="form-group">
                            <label for="sector-name" class="col-2 col-form-label">Nome do Setor(Descrição):</label>
                            <div class="col-10">
                                <input type="text" class="form-control" id="SectorName" placeholder="Nome" name="SectorName" data-bind="value: SectorName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="sector-name" class="col-2 col-form-label">Localização do setor:</label>
                            <div class="col-10">
                                <select type="text" name="SectorLocationId" class="form-control"
                                        data-bind="options: SectorLocations,
                                      optionsText:'description',
                                      optionsValue:'value',
                                      value: SectorLocation,
                                      optionsCaption: 'Selecione'"></select>
                            </div>
                        </div>
                        <div class="alert alert-success" role="alert" data-bind="visible: NewSectorAddedWithSuccess">
                            <strong>O setor foi adicionado com sucesso!</strong>
                        </div>
                        <div class="alert alert-warning" role="alert" data-bind="visible: NewSectorAddedWithError">
                            <strong>Ocorreu um erro ao adicionar o setor, por favor tente novamente!</strong>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Adicionar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </form>
              

            </div>
        </div>
    </div>
</div>

<div id="locker-block-div">
    <div class="modal fade" id="block-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Adicionar Novo Bloco de Armários</h4>
                </div>

                <form data-bind="submit: LockerBlockSubmit">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="sector-name" class="form-control-label">Qtde de Armários Verticais:</label>
                            <input type="text" class="form-control" placeholder="Armários Verticais"
                                   name="TotalNumberOfVerticalLockers" data-bind="value: TotalNumberOfVerticalLockers">
                        </div>
                        <div class="form-group">
                            <label for="sector-name" class="form-control-label">Qtde de Armários Horizontais:</label>
                            <input type="text" class="form-control" placeholder="Armários Horizontais"
                                   name="TotalNumberOfHorizontalLockers" data-bind="value: TotalNumberOfHorizontalLockers">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Setor:</label>
                            <select type="text" name="SectorId" class="form-control"
                                    data-bind="options: Sectors,
                                      optionsText:'description',
                                      optionsValue:'value',
                                      value: Sector,
                                      optionsCaption: 'Selecione'"></select>
                        </div>
                        <div class="alert alert-success" role="alert" data-bind="visible: BlockAddedWithSuccess">
                            <strong>O bloco de armário foi adicionado com sucesso!</strong>
                        </div>
                        <div class="alert alert-warning" role="alert" data-bind="visible: BlockError">
                            <strong>Ocorreu um erro ao adicionar o setor, por favor tente novamente!</strong>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Adicionar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="locker-div">
    <div class="modal fade" id="locker-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Adicionar Novo Armário</h4>
                </div>

                <form data-bind="submit: LockerSubmit" id="locker-form">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="sector-name" class="form-control-label">Número da posição vertical:</label>
                            <input type="text" class="form-control" placeholder="Posição vertical" name="VerticalPositionNumber"
                                   data-bind="value: VerticalPositionNumber">
                        </div>
                        <div class="form-group">
                            <label for="sector-name" class="form-control-label">Número da posição horizontal:</label>
                            <input type="text" class="form-control" placeholder="Posição horizontal" name="HorizontalPositionNumber"
                                   data-bind="value: HorizontalPositionNumber">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Bloco:</label>
                            <select id="LockerBlock" type="text" name="LockerBlockId" class="form-control"
                                    data-bind="options: LockerBlockers,
                                      optionsText:'description',
                                      optionsValue:'value',
                                      value: LockerBlock,
                                      optionsCaption: 'Selecione'"></select>
                        </div>
                        <div class="alert alert-success" role="alert" data-bind="visible: NewLockerAddedWithSuccess">
                            <strong>O armário foi adicionado com sucesso!</strong>
                        </div>
                        <div class="alert alert-warning" role="alert" data-bind="visible: NewLockerError">
                            <strong>Ocorreu um erro ao adicionar o armário, por favor tente novamente!</strong>
                        </div>
                        <div class="alert alert-warning" role="alert" data-bind="visible: IsUnavailableLockerBlock">
                            <strong>Não é possivel adicionar um novo armário neste bloco, pois já passou do limite</strong>
                        </div>
                        <div class="alert alert-warning" role="alert" data-bind="visible: HaveBlankFields">
                            <strong>Por favor, preencha todos os campos!</strong>
                        </div>
                        <div class="alert alert-warning" role="alert" data-bind="visible: IsUnavailableLockerPosition">
                            <strong>Esta posição já esta sendo utilizada por outro locker, por favor escolha outra!</strong>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Adicionar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/app/View/LockerSetup/LockerSetup.js" type="text/javascript"></script>